<% provide(:title, 'Fix - New client') %>

<%= bootstrap_form_for(@client, :url => clients_path, :html => { :class => 'form-horizontal', :multipart => true }, style: :horizontal, left: "col-sm-2", right: "col-sm-4", help: :block) do |f| %>
  <%= f.alert_message t('global.errors') %>
  
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">New client</div>
    </div>
    <div class="panel-body">
      <%= f.text_field :name %>

      <%= f.text_field :phone_number %>
      <%= f.text_field :mobile_phone_number %>
      <%= f.text_field :email_address %>

      <%= f.text_field :postal_code %>
      <%= f.text_field :house_number %>

      <div class="form-group">
        <span class="btn btn-mini btn-primary" id="btn-lookup">Lookup</span>
        <span id="lookup-response"></span>
      </div>

      <%= f.text_field :street %>
      <%= f.text_field :city %>
    </div>
    <div class="panel-footer">
      <%= f.submit 'Save client', data: { disable_with: 'Saving client' } %>
    </div>
  </div>
<% end %>

<%= link_to t('global.back'), clients_path %>
