<!-- Modal -->
<div class="modal fade" id="modal-signup" tabindex="-1" role="dialog" aria-labelledby="modalLabel-signup" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= bootstrap_form_for(:user, :as => :user, :url => registration_path(:user)) do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="modalLabel-signup"><%= t('layouts.signup.button') %></h4>
          <%= f.alert_message t('global.errors') %>
        </div>
        <div class="modal-body">
          <%= f.text_field :name, label: t('global.name') %>
				  <%= f.email_field :email, label: t('global.email') %>
				  <%= f.password_field :password, label: t('global.password') %>
				  <%= f.password_field :password_confirmation, label: t('global.password_confirmation') %>
				  
				  <%= f.hidden_field :initial_role, :value => params[:initial_role] %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('global.close') %></button>
          <%= f.submit t('layouts.signup.button'), data: { disable_with:  t('layouts.signup.button_send') }, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
