<!-- Modal -->
<div class="modal fade" id="modal-signup" tabindex="-1" role="dialog" aria-labelledby="modalLabel-signup" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= bootstrap_form_for(:user, :as => :user, :url => registration_path(:user)) do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="modalLabel-signup">Sign Up</h4>
          <%= f.alert_message "Please fix the errors below." %>
        </div>
        <div class="modal-body">
          <%= f.text_field :name %>
				  <%= f.email_field :email %>
				  <%= f.password_field :password %>
				  <%= f.password_field :password_confirmation %>
				  
				  <%= f.hidden_field :initial_role, :value => params[:initial_role] %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit 'Sign up', data: { disable_with: 'Signing up...' }, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->