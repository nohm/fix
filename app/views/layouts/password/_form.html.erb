<!-- Modal -->
<div class="modal fade" id="modal-pass" tabindex="-1" role="dialog" aria-labelledby="modalLabel-pass" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= bootstrap_form_for(:user, :as => :user, :url => password_path(:user)) do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="modalLabel-pass"><%= t('layouts.footer.forgot_pass') %></h4>
          <%= f.alert_message t('global.errors') %>
        </div>
        <div class="modal-body">
          <%= f.email_field :email, :autofocus => true %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('global.close') %></button>
          <%= f.submit "Send me reset password instructions", data: { disable_with:  t('layouts.signup.button_send') }, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
