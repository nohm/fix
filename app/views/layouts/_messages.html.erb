<div id="alert-box">
  <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
        <div class="alert alert-<%= name == :notice ? "success" : "danger" %>">
          <a class="close" data-dismiss="alert">&#215;</a>
          <div id="flash_<%= name %>">
            <span class="glyphicon glyphicon-<%= name == :notice ? "ok" : "remove" %>"></span>
           <%= '  ' + msg %>
          </div>
          <% flash.delete(name) %>
        </div>
    <% end %>
  <% end %>

  <% @broadcasts.each do |broadcast| %>
      <div class="alert alert-info">
        <a onclick="disableBroadcast('<%= disable_broadcast_path(broadcast[:id]) %>')" class="close" data-dismiss="alert">&#215;</a>
        <div id="broadcast_<%= broadcast[:id] %>">
          <span class="glyphicon glyphicon-exclamation-sign"></span>
          <strong><%= broadcast[:title] %></strong>
          <%= raw(broadcast[:text]) %>
        </div>
      </div>
  <% end %>
</div>
