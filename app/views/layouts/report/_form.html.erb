<!-- Modal -->
<div class="modal fade" id="modal-report" tabindex="-1" role="dialog" aria-labelledby="modalLabel-report" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= bootstrap_form_for(:home, :as => :home, :url => send_report_path) do |f| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="modalLabel-report"><%= t('layouts.report.button_large') %></h4>
        </div>
        <div class="modal-body">
          <%= f.text_area :message, label: t('global.message') %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit t('layouts.report.button'), data: { disable_with: t('layouts.report.button_send') }, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
