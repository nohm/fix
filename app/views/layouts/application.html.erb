<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Badger" %></title>
    <%= favicon_link_tag 'favicon.ico' %>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Badger" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
  
    <header class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse-1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          <%= link_to("Badger", root_path, :class => "navbar-brand") %>
	      </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <nav class="collapse navbar-collapse navbar-collapse-1" role="navigation">
          <% if user_signed_in? %>
            <%= render 'layouts/navigation' %>
          <% else %>
            <%= render 'layouts/signin' %>
          <% end %>
        </nav><!-- /.navbar-collapse -->
      </div>
    </header>

    <div id="main" role="main">
      <div class="container">
        <div class="content">
          <div class="row">
            <div class="col-md-12">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->

    <footer>
      <div class="container">
        <p>Made and maintained by <a href="mailto:info@nohm.eu">nohm</a></p>
        <p>
          <code>uptime <%= %x[uptime | awk '{print $1}'] %></code>
          <code>response <%= "%.2f" % (Time.now.to_f - @time + 0.02) %></code>
        </p>
        <ul class="footer-links">
            <% unless user_signed_in? %>
              <li><%= render 'layouts/signup/button' %></li>
              <li class="muted"> · </li>
              <li><%= link_to "Forgot your password?", new_password_path(:user) %></li>
              <li class="muted"> · </li>
            <% end %>
            <li><%= render 'layouts/report/button' %></li>
            <% if can? :manage, User %>
              <li class="muted"> · </li>
              <li><%= link_to("Users", users_path) %></li>
              <li class="muted"> · </li>
              <li><%= link_to("Appliances", appliances_path) %></li>
              <li class="muted"> · </li>
              <li><%= link_to("Classes", classifications_path) %></li>
              <li class="muted"> · </li>
              <li><%= link_to("History", history_index_path) %></li>
            <% end %>
        </ul>
      </div>
    </footer>

    <%= render 'layouts/signup/form' %> 
    <%= render 'layouts/report/form' %> 
  </body>
</html>
