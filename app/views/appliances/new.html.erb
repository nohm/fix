<% provide(:title, 'Badger - New appliance') %>

<%= bootstrap_form_for :appliance, :url => appliances_path, help: :block do |f| %>
  <%= f.alert_message "Please fix the errors below." %>
  
  <legend>New appliance</legend>
  
  <%= f.text_field :name %>
  <%= f.text_field :abb, :label => 'Abbrevation' %>

  <%= f.primary 'Save appliance', data: { disable_with: 'Saving...' } %>
<% end %>

<%= link_to "Back", appliances_path %>