<% provide(:title, t('stock.edit.title')) %>

<%= bootstrap_form_for(@stock, method: :patch, :url => company_type_stock_path(params[:company_id], params[:type_id], @stock.id), :html => { :class => 'form-horizontal', :multipart => true }, style: :horizontal, left: "col-sm-2", right: "col-sm-4", help: :block) do |f| %>
  <%= f.alert_message t('global.errors') %>
  
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title"><%= t('stock.edit.legend') %></div>
    </div>
    <div class="panel-body">
      <%= f.text_field :name, label: t('global.name') %>
      <%= f.text_field :amount, label: t('global.amount') %>
      <%= f.text_field :amount_per_app, label: t('global.amount_per_app') %>
      <%= f.text_field :minimum, label: t('global.minimum') %>
      <%= f.form_group :send_mail do %>
        <%= f.check_box :send_mail, label: t('global.send_mail') %>
      <% end %>
    </div>
    <div class="panel-footer">
      <%= f.submit t('stock.edit.button'), data: { disable_with: t('stock.edit.button_send') } %>
    </div>
  </div>
<% end %>

<%= link_to t('global.back'), company_type_stocks_path(params[:company_id], params[:type_id]) %>
