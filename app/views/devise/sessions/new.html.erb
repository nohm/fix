<% provide(:title, 'Maxi - Sign in') %>

<%= bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name), help: :block) do |f| %>

  <legend>Sign in</legend>

  <%= f.email_field :email, :autofocus => true %>
  <%= f.password_field :password %>

  <% if devise_mapping.rememberable? -%>
    <%= f.control_group :remember do %>
      <%= f.check_box :remember_me, label: 'Remember me' %>
    <% end %>
  <% end -%>

  <%= f.primary 'Sign in', data: { disable_with: 'Signing in...' } %>
<% end %>

<%= render "devise/shared/links" %>