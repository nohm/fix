<% provide(:title, 'Maxi - Sign in') %>

<%= bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name), style: :horizontal, left: "col-sm-2", right: "col-sm-6", help: :block) do |f| %>

  <legend>Sign in</legend>

  <%= f.email_field :email, :autofocus => true %>
  <%= f.password_field :password %>

  <% if devise_mapping.rememberable? -%>
    <%= f.form_group :remember do %>
      <%= f.check_box :remember_me, label: 'Remember me' %>
    <% end %>
  <% end -%>

  <%= f.form_group do %>
  	<%= f.submit 'Sign in', data: { disable_with: 'Signing in...' }, class: "btn btn-primary" %>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>