<% provide(:title, 'Badger - Edit account') %>

<%= bootstrap_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, style: :horizontal, left: "col-sm-2", right: "col-sm-6") do |f| %>

  <legend>Edit account</legend>

  <%= f.text_field :name %>
  <%= f.email_field :email %>
  <%= f.select :language, @locales %>
  <%= f.password_field :password, :help => '(leave blank if you don\'t want to change it)', :autocomplete => 'off' %>
  <%= f.password_field :password_confirmation %>
  <br/>
  <%= f.password_field :current_password, :help => '(we need your current password to confirm your changes)' %>

  <%= f.form_group do %>
  	<%= f.submit 'Update account', data: { disable_with: 'Updating account...' }, class: "btn btn-primary" %>
  <% end %>
<% end %>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>
<%= link_to "Back", :back %>
